  "name": "Urban Footer",
  "tag": "section",
  "class": "urban-footer-section",
  "settings": [
    {
      "type": "header",
      "content": "Branding"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Texto del logo",
      "default": "Urban Performance Lab"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripcion",
      "default": "Bridging the gap between performance technology and lifestyle aesthetics. Your ultimate guide to the swoosh."
    },
    {
      "type": "header",
      "content": "Redes Sociales"
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "Twitter/X"
    },
    {
      "type": "url",
      "id": "social_youtube",
      "label": "YouTube"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook"
    },
    {
      "type": "url",
      "id": "social_tiktok",
      "label": "TikTok"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_name",
      "label": "Nombre copyright",
      "default": "NK Archive"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Texto de copyright",
      "default": "All rights reserved."
    },
    {
      "type": "textarea",
      "id": "disclaimer",
      "label": "Disclaimer",
      "default": "NK Archive is a participant in the Nike Affiliate Program. We earn a commission from qualifying purchases made through links on this site at no extra cost to you. This site is not officially affiliated with Nike Inc. All logos and trademarks property of their respective owners."
    }
  ],
  "blocks": [
    {
      "type": "menu_column",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Titulo",
          "default": "Shop"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Urban Footer",
      "blocks": [
        {
          "type": "menu_column",
          "settings": {
            "title": "Shop"
          }
        },
        {
          "type": "menu_column",
          "settings": {
            "title": "Content"
          }
        },
        {
          "type": "menu_column",
          "settings": {
            "title": "Legal"
          }
        }
      ]
    }
  ]
}
{% endschema %}
