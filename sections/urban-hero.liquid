{% comment %}
  Urban Performance Lab - Hero Section
  Adaptado del template1.html para Shopify
{% endcomment %}

<header class="urban-template md:pt-48 md:pb-32 pt-32 pr-6 pb-16 pl-6 bg-white text-neutral-900 antialiased">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row items-end gap-12">
      <div class="w-full md:w-1/2">
        {%- if section.settings.subtitle != blank -%}
          <span class="text-xs font-medium text-neutral-500 uppercase tracking-widest mb-4 block">
            {{ section.settings.subtitle }}
          </span>
        {%- endif -%}

        <h1 class="md:text-7xl lg:text-8xl leading-[0.95] text-5xl font-semibold text-neutral-950 tracking-tighter font-editorial mb-8">
          {{ section.settings.title | default: 'Performance Meets Everyday Style.' }}
        </h1>

        {%- if section.settings.description != blank -%}
          <p class="text-neutral-500 text-lg md:text-xl leading-relaxed max-w-md mb-10 font-normal">
            {{ section.settings.description }}
          </p>
        {%- endif -%}

        <div class="flex flex-wrap gap-4">
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="bg-neutral-950 text-white px-8 py-4 rounded-md text-sm font-medium hover:bg-neutral-800 transition-all flex items-center gap-2">
              {{ section.settings.button_label }}
              <iconify-icon icon="lucide:arrow-right" width="16" stroke-width="1.5"></iconify-icon>
            </a>
          {%- endif -%}

          {%- if section.settings.button_label_2 != blank -%}
            <a href="{{ section.settings.button_link_2 }}" class="bg-neutral-100 text-neutral-900 px-8 py-4 rounded-md text-sm font-medium hover:bg-neutral-200 transition-all">
              {{ section.settings.button_label_2 }}
            </a>
          {%- endif -%}
        </div>

        {%- if section.settings.disclaimer != blank -%}
          <p class="text-xs text-neutral-400 max-w-xs mt-6">
            {{ section.settings.disclaimer }}
          </p>
        {%- endif -%}
      </div>

      <div class="w-full md:w-1/2 relative">
        <div class="aspect-[4/5] md:aspect-square bg-neutral-100 rounded-xl overflow-hidden relative group">
          {%- if section.settings.image != blank -%}
            <img
              src="{{ section.settings.image | image_url: width: 1200 }}"
              alt="{{ section.settings.image.alt | default: section.settings.title }}"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-700 {{ section.settings.image_filter }}"
              loading="eager"
            >
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'object-cover w-full h-full' }}
          {%- endif -%}

          {%- if section.settings.image_badge != blank -%}
            <div class="absolute bottom-6 left-6 bg-white/90 backdrop-blur px-4 py-2 rounded text-xs font-medium shadow-sm">
              {{ section.settings.image_badge }}
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Urban Hero",
  "tag": "section",
  "class": "urban-hero-section",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitulo",
      "default": "Curated Performance"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Titulo",
      "default": "Performance Meets Everyday Style."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripcion",
      "default": "Explore the finest selection of footwear and apparel. Expert reviews, styling guides, and performance insights for the modern athlete."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Texto del boton principal",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del boton principal"
    },
    {
      "type": "text",
      "id": "button_label_2",
      "label": "Texto del boton secundario",
      "default": "Read Reviews"
    },
    {
      "type": "url",
      "id": "button_link_2",
      "label": "Enlace del boton secundario"
    },
    {
      "type": "text",
      "id": "disclaimer",
      "label": "Texto de disclaimer",
      "default": "*We independently review products. We may earn a commission from affiliate links."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen principal"
    },
    {
      "type": "text",
      "id": "image_badge",
      "label": "Badge de imagen",
      "default": "Featured: New Collection"
    },
    {
      "type": "select",
      "id": "image_filter",
      "label": "Filtro de imagen",
      "options": [
        { "value": "", "label": "Ninguno" },
        { "value": "grayscale hover:grayscale-0", "label": "Escala de grises (hover color)" },
        { "value": "grayscale", "label": "Escala de grises" },
        { "value": "sepia hover:sepia-0", "label": "Sepia (hover normal)" }
      ],
      "default": "grayscale hover:grayscale-0"
    }
  ],
  "presets": [
    {
      "name": "Urban Hero"
    }
  ]
}
{% endschema %}
