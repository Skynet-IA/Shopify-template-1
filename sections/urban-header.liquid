{% comment %}
  Urban Performance Lab - Navigation
  Pixel-perfect copy from plantilla.html
{% endcomment %}

<nav class="urban-template fixed top-0 w-full z-50 bg-white/80 backdrop-blur-md border-b border-neutral-100">
  <div class="max-w-7xl mx-auto px-6 h-16 flex items-center justify-between">
    <a href="{{ routes.root_url }}" class="uppercase text-lg font-semibold tracking-tighter">
      {%- if section.settings.logo != blank -%}
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" width="200" height="32" class="h-8 w-auto">
      {%- else -%}
        {{ section.settings.logo_text | default: 'Urban Performance Lab' }}
      {%- endif -%}
    </a>

    <div class="hidden md:flex items-center gap-8 text-sm font-medium text-neutral-500">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link | default: '#' }}" class="hover:text-black transition-colors" {{ block.shopify_attributes }}>
          {{ block.settings.label }}
        </a>
      {%- endfor -%}
    </div>

    <div class="flex items-center gap-4">
      {%- if section.settings.show_search -%}
        <button class="text-neutral-500 hover:text-black transition-colors" type="button" aria-label="Search">
          <iconify-icon icon="lucide:search" width="20" stroke-width="1.5" class=""></iconify-icon>
        </button>
      {%- endif -%}

      {%- if section.settings.cta_label != blank -%}
        <a href="{{ section.settings.cta_link | default: '#shop' }}" class="hidden sm:block bg-black text-white px-4 py-2 rounded text-xs font-medium hover:bg-neutral-800 transition-colors">
          {{ section.settings.cta_label }}
        </a>
      {%- endif -%}

      <button class="md:hidden text-neutral-500" type="button" onclick="document.getElementById('mobile-menu').classList.toggle('hidden')" aria-label="Menu">
        <iconify-icon icon="lucide:menu" width="20" stroke-width="1.5"></iconify-icon>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-neutral-100 px-6 py-4">
    {%- for block in section.blocks -%}
      <a href="{{ block.settings.link | default: '#' }}" class="block py-2 text-sm font-medium text-neutral-500 hover:text-black transition-colors">
        {{ block.settings.label }}
      </a>
    {%- endfor -%}
  </div>
</nav>

<!-- Spacer -->
<div class="h-16"></div>

{% schema %}
{
  "name": "Urban Header",
  "tag": "section",
  "class": "urban-header-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "Urban Performance Lab"
    },
    {
      "type": "checkbox",
      "id": "show_search",
      "label": "Show search",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "CTA button text",
      "default": "Top Picks"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "CTA button link"
    }
  ],
  "blocks": [
    {
      "type": "menu_link",
      "name": "Menu Link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Urban Header",
      "blocks": [
        { "type": "menu_link", "settings": { "label": "Collections", "link": "#collections" } },
        { "type": "menu_link", "settings": { "label": "Reviews", "link": "#reviews" } },
        { "type": "menu_link", "settings": { "label": "Guides", "link": "#guides" } },
        { "type": "menu_link", "settings": { "label": "About", "link": "#about" } }
      ]
    }
  ]
}
{% endschema %}
